{
  "name": "cartridge",
  "version": "0.3.5",
  "description": "A basic website setup with gulp",
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cartridge/cartridge"
  },
  "dependencies": {
    "chalk": "^1.1.1",
    "del": "^2.2.0",
    "fs-extra": "^0.26.5",
    "lodash": "^4.6.1",
    "ncp": "^2.0.0",
    "path": "^0.12.7",
    "cartridge-performance": "/Users/danielfurze/Sites/CodeComputerlove/cartridge/cartridge-performance"
  },
  "devDependencies": {
    "chai": "^1.6.1",
    "chai-fs": "^0.1.0",
    "cz-conventional-changelog": "^1.1.5",
    "ghooks": "^1.2.1",
    "validate-commit-msg": "^2.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  }
}
